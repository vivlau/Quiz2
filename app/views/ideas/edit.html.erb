<h1>Editing idea</h1>

<%= form_for(@idea) do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :name %>
    <%= current_user.name %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </p>

  <p>
    <%= submit_tag 'Update Idea', class: 'btn btn-primary'  %>
  </p>

<% end %>

<%= link_to 'Back', ideas_path %>
