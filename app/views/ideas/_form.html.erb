<div id="contact-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h1>New Idea</h1>
          <br>
          <%= form_for :idea, url: ideas_path do |f| %>
            <p>
              <%= f.label :title %><br>
              <%= f.text_field :title, :class => 'new_idea_field' %>
            </p>

            <p>
              <%= f.label :body %><br>
              <%= f.text_area :body, :class => 'idea_textarea_field' %>
            </p>

            <p>
              <%= f.label :name %>
              <%= current_user.name %>
              <%= f.hidden_field :user_id, :value => current_user.id %>
            </p>

              <%= f.hidden_field :likes, value: 0 %>
              <%= f.hidden_field :members, value: 0 %>
            <p>
              <%= submit_tag 'Save Idea', class: 'btn btn-primary'  %>
            </p>
          <% end %>

          <%= link_to 'Back', ideas_path %>\
    </div>
  </div>
</div>
